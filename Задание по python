print()

# Простые расчеты
print("НЕБОЛЬШИЕ РАСЧЕТЫ:")
# Площадь круга радиусом 5
radius = 5
area = constants.PI * radius * radius
print(f"Площадь круга радиусом {radius}: {area:.2f}")

# Сила тяжести для тела массой 10 кг
mass = 10
force = mass * constants.G
print(f"Сила тяжести для тела массой {mass} кг: {force:.2f} Н")

# Время, за которое свет пройдет 100000 км
distance = 100000  # км
time = distance / constants.C
print(f"Свет пройдет {distance} км за {time:.4f} секунд")
print()

