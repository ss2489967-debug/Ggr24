import random
import time
import sys

class TextAdventureGame:
    """–¢–µ–∫—Å—Ç–æ–≤–∞—è RPG-–∏–≥—Ä–∞ '–°—Ç—Ä–∞–Ω–Ω–∏–∫ –¢—ë–º–Ω–æ–≥–æ –õ–µ—Å–∞'"""
    
    def __init__(self):
        self.player_name = ""
        self.player_hp = 100
        self.player_max_hp = 100
        self.player_attack = 15
        self.player_defense = 10
        self.player_gold = 50
        self.player_xp = 0
        self.player_level = 1
        self.inventory = {
            '–∑–µ–ª—å–µ –∑–¥–æ—Ä–æ–≤—å—è': 2,
            '–º–∞–ª–æ–µ –∑–µ–ª—å–µ —Å–∏–ª—ã': 1
        }
        self.game_over = False
        self.current_location = "–≤—Ö–æ–¥ –≤ –ª–µ—Å"
        self.locations = {
            "–≤—Ö–æ–¥ –≤ –ª–µ—Å": {
                "–æ–ø–∏—Å–∞–Ω–∏–µ": "–í—ã —Å—Ç–æ–∏—Ç–µ –Ω–∞ –≥—Ä–∞–Ω–∏—Ü–µ –¥—Ä–µ–≤–Ω–µ–≥–æ –¢—ë–º–Ω–æ–≥–æ –õ–µ—Å–∞. –ü–µ—Ä–µ–¥ –≤–∞–º–∏ –¥–≤–µ —Ç—Ä–æ–ø–∏–Ω–∫–∏.\n–°–ª–µ–≤–∞ –≤–µ–¥—ë—Ç –∫ –∑–∞—Ä–æ—Å–ª—è–º, —Å–ø—Ä–∞–≤–∞ ‚Äî –∫ —Å—Ç–∞—Ä–æ–π –¥–æ—Ä–æ–≥–µ.",
                "–¥–µ–π—Å—Ç–≤–∏—è": ["–∏–¥—Ç–∏ –≤ –∑–∞—Ä–æ—Å–ª–∏", "–∏–¥—Ç–∏ –ø–æ –¥–æ—Ä–æ–≥–µ", "–æ—Ç–∫—Ä—ã—Ç—å –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å", "—Å—Ç–∞—Ç—É—Å"]
            },
            "–∑–∞—Ä–æ—Å–ª–∏": {
                "–æ–ø–∏—Å–∞–Ω–∏–µ": "–ì—É—Å—Ç—ã–µ –∫–æ–ª—é—á–∏–µ –∑–∞—Ä–æ—Å–ª–∏. –í–æ–∑–¥—É—Ö –≤–ª–∞–∂–Ω—ã–π –∏ —Å–ø—ë—Ä—Ç—ã–π.\n–í–¥–∞–ª–µ–∫–µ —Å–ª—ã—à–µ–Ω —Å—Ç—Ä–∞–Ω–Ω—ã–π —à–µ–ª–µ—Å—Ç.",
                "–¥–µ–π—Å—Ç–≤–∏—è": ["–∏—Å—Å–ª–µ–¥–æ–≤–∞—Ç—å —à–µ–ª–µ—Å—Ç", "–≤–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞–∑–∞–¥", "–æ—Ç–∫—Ä—ã—Ç—å –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å", "—Å—Ç–∞—Ç—É—Å"],
                "–≤—Ä–∞–≥": ("–≥–æ–±–ª–∏–Ω-—Ä–∞–∑–≤–µ–¥—á–∏–∫", 40, 12, 8, 20)
            },
            "—Å—Ç–∞—Ä–∞—è –¥–æ—Ä–æ–≥–∞": {
                "–æ–ø–∏—Å–∞–Ω–∏–µ": "–ó–∞–±—Ä–æ—à–µ–Ω–Ω–∞—è –∫–∞–º–µ–Ω–Ω–∞—è –¥–æ—Ä–æ–≥–∞. –ö–∞–º–Ω–∏ –ø–æ–∫—Ä—ã—Ç—ã –º—Ö–æ–º.\n–ù–∞ –æ–±–æ—á–∏–Ω–µ –≤–∏–¥–Ω–∞ –ø–æ–ª—É—Ä–∞–∑—Ä—É—à–µ–Ω–Ω–∞—è —Ö–∏–∂–∏–Ω–∞.",
                "–¥–µ–π—Å—Ç–≤–∏—è": ["–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Ö–∏–∂–∏–Ω—É", "–≤–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞–∑–∞–¥", "–æ—Ç–∫—Ä—ã—Ç—å –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å", "—Å—Ç–∞—Ç—É—Å"]
            },
            "—Ö–∏–∂–∏–Ω–∞": {
                "–æ–ø–∏—Å–∞–Ω–∏–µ": "–í —Ö–∏–∂–∏–Ω–µ –ø–∞—Ö–Ω–µ—Ç –ø–ª–µ—Å–µ–Ω—å—é. –ù–∞ —Å—Ç–æ–ª–µ —Å—Ç–æ–∏—Ç —Å—Ç—Ä–∞–Ω–Ω—ã–π —Ñ–ª–∞–∫–æ–Ω.\n–°–∑–∞–¥–∏ —Å–ª—ã—à–∏—Ç—Å—è —Ä—ã—á–∞–Ω–∏–µ.",
                "–¥–µ–π—Å—Ç–≤–∏—è": ["–≤–∑—è—Ç—å —Ñ–ª–∞–∫–æ–Ω", "–æ–±–µ—Ä–Ω—É—Ç—å—Å—è", "–≤—ã–π—Ç–∏ –Ω–∞—Ä—É–∂—É", "–æ—Ç–∫—Ä—ã—Ç—å –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å", "—Å—Ç–∞—Ç—É—Å"],
                "–≤—Ä–∞–≥": ("–±–æ–ª—å–Ω–æ–π –≤–æ–ª–∫", 50, 15, 5, 30),
                "–ø—Ä–µ–¥–º–µ—Ç": ("—Ç–∞–∏–Ω—Å—Ç–≤–µ–Ω–Ω–æ–µ –∑–µ–ª—å–µ", "–∑–µ–ª—å–µ")
            }
        }
    
    def slow_print(self, text, delay=0.03):
        """–ü–µ—á–∞—Ç–∞–µ—Ç —Ç–µ–∫—Å—Ç —Å —ç—Ñ—Ñ–µ–∫—Ç–æ–º –ø–µ—á–∞—Ç–Ω–æ–π –º–∞—à–∏–Ω–∫–∏"""
        for char in text:
            sys.stdout.write(char)
            sys.stdout.flush()
            time.sleep(delay)
        print()
    
    def clear_screen(self):
        """–û—á–∏—â–∞–µ—Ç —ç–∫—Ä–∞–Ω (–∫—Ä–æ—Å—Å-–ø–ª–∞—Ç—Ñ–æ—Ä–º–µ–Ω–Ω—ã–π —Å–ø–æ—Å–æ–±)"""
        print("\n" * 2)
        print("‚ïê" * 60)
    
    def show_header(self):
        """–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç –∑–∞–≥–æ–ª–æ–≤–æ–∫ –∏–≥—Ä—ã"""
        self.clear_screen()
        print("""
        ‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó
        ‚ïë              –°–¢–†–ê–ù–ù–ò–ö –¢–Å–ú–ù–û–ì–û –õ–ï–°–ê                   ‚ïë
        ‚ïë                 –¢–µ–∫—Å—Ç–æ–≤–∞—è RPG                        ‚ïë
        ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù
        """)
    
    def show_status(self):
        """–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç —Å—Ç–∞—Ç—É—Å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞"""
        print(f"\n‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê –°–¢–ê–¢–£–° ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó")
        print(f"‚ïë –ò–º—è: {self.player_name:<20} –£—Ä.{self.player_level:>2} ‚ïë")
        print(f"‚ïë –ó–¥–æ—Ä–æ–≤—å–µ: {self.player_hp}/{self.player_max_hp:<10}         ‚ïë")
        print(f"‚ïë –ê—Ç–∞–∫–∞: {self.player_attack:<3}  –ó–∞—â–∏—Ç–∞: {self.player_defense:<3}          ‚ïë")
        print(f"‚ïë –ó–æ–ª–æ—Ç–æ: {self.player_gold:<5}   –û–ø—ã—Ç: {self.player_xp:<5}     ‚ïë")
        print(f"‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù")
        input("\n–ù–∞–∂–º–∏—Ç–µ Enter —á—Ç–æ–±—ã –ø—Ä–æ–¥–æ–ª–∂–∏—Ç—å...")
    
    def show_inventory(self):
        """–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å –∏–≥—Ä–æ–∫–∞"""
        self.clear_screen()
        print("‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê –ò–ù–í–ï–ù–¢–ê–†–¨ ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó")
        
        if not self.inventory:
            print("‚ïë         –ò–Ω–≤–µ–Ω—Ç–∞—Ä—å –ø—É—Å—Ç!                ‚ïë")
        else:
            for item, count in self.inventory.items():
                print(f"‚ïë {item:<25} x{count:>3} ‚ïë")
        
        print("‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù")
        
        print("\n–ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø—Ä–µ–¥–º–µ—Ç? (–≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –∏–ª–∏ '–Ω–µ—Ç')")
        choice = input("> ").lower().strip()
        
        if choice in self.inventory and choice != '–Ω–µ—Ç':
            self.use_item(choice)
    
    def use_item(self, item_name):
        """–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ –∏–∑ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è"""
        if item_name in self.inventory:
            if item_name == '–∑–µ–ª—å–µ –∑–¥–æ—Ä–æ–≤—å—è':
                heal = random.randint(25, 40)
                self.player_hp = min(self.player_max_hp, self.player_hp + heal)
                print(f"\n–í—ã –≤—ã–ø–∏–ª–∏ {item_name} –∏ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–∏–ª–∏ {heel} –∑–¥–æ—Ä–æ–≤—å—è!")
                self.inventory[item_name] -= 1
                if self.inventory[item_name] <= 0:
                    del self.inventory[item_name]
            
            elif '–∑–µ–ª—å–µ —Å–∏–ª—ã' in item_name:
                self.player_attack += 5
                print(f"\n–í—ã –≤—ã–ø–∏–ª–∏ {item_name}. –í–∞—à–∞ –∞—Ç–∞–∫–∞ —É–≤–µ–ª–∏—á–∏–ª–∞—Å—å –Ω–∞ 5!")
                self.inventory[item_name] -= 1
                if self.inventory[item_name] <= 0:
                    del self.inventory[item_name]
            
            else:
                print(f"\n–í—ã –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ {item_name}, –Ω–æ –Ω–∏—á–µ–≥–æ –Ω–µ –ø—Ä–æ–∏—Å—Ö–æ–¥–∏—Ç...")
        
        time.sleep(2)
    
    def level_up(self):
        """–ü–æ–≤—ã—à–µ–Ω–∏–µ —É—Ä–æ–≤–Ω—è –ø–µ—Ä—Å–æ–Ω–∞–∂–∞"""
        if self.player_xp >= self.player_level * 50:
            self.player_level += 1
            self.player_max_hp += 20
            self.player_hp = self.player_max_hp
            self.player_attack += 5
            self.player_defense += 3
            
            print(f"\nüéâ –ü–û–ó–î–†–ê–í–õ–Ø–ï–ú! –í—ã –¥–æ—Å—Ç–∏–≥–ª–∏ {self.player_level} —É—Ä–æ–≤–Ω—è!")
            print(f"–ó–¥–æ—Ä–æ–≤—å–µ: +20, –ê—Ç–∞–∫–∞: +5, –ó–∞—â–∏—Ç–∞: +3")
            time.sleep(2)
    
    def combat(self, enemy_name, enemy_hp, enemy_attack, enemy_defense, xp_reward):
        """–ë–æ–µ–≤–∞—è —Å–∏—Å—Ç–µ–º–∞"""
        print(f"\n‚öîÔ∏è  –í–°–¢–†–ï–ß–ê –° –í–†–ê–ì–û–ú: {enemy_name.upper()}!")
        print(f"–ó–¥–æ—Ä–æ–≤—å–µ –≤—Ä–∞–≥–∞: {enemy_hp}")
        
        while enemy_hp > 0 and self.player_hp > 0:
            print("\n1. –ê—Ç–∞–∫–æ–≤–∞—Ç—å")
            print("2. –ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –ø—Ä–µ–¥–º–µ—Ç")
            print("3. –ü–æ–ø—ã—Ç–∞—Ç—å—Å—è —É–±–µ–∂–∞—Ç—å")
            
            choice = input("–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ: ").strip()
            
            if choice == '1':
                # –ò–≥—Ä–æ–∫ –∞—Ç–∞–∫—É–µ—Ç
                player_damage = max(1, self.player_attack - random.randint(0, enemy_defense))
                enemy_hp -= player_damage
                print(f"\n–í—ã –Ω–∞–Ω–µ—Å–ª–∏ {player_damage} —É—Ä–æ–Ω–∞ {enemy_name}!")
                
                if enemy_hp <= 0:
                    print(f"üéØ –í—ã –ø–æ–±–µ–¥–∏–ª–∏ {enemy_name}!")
                    self.player_xp += xp_reward
                    gold_gain = random.randint(xp_reward // 2, xp_reward)
                    self.player_gold += gold_gain
                    print(f"–ü–æ–ª—É—á–µ–Ω–æ: {xp_reward} –æ–ø—ã—Ç–∞, {gold_gain} –∑–æ–ª–æ—Ç–∞")
                    self.level_up()
                    
                    # –®–∞–Ω—Å –Ω–∞ –¥—Ä–æ–ø –ø—Ä–µ–¥–º–µ—Ç–∞
                    if random.random() < 0.3:
                        item = random.choice(['–∑–µ–ª—å–µ –∑–¥–æ—Ä–æ–≤—å—è', '–º–∞–ª–æ–µ –∑–µ–ª—å–µ —Å–∏–ª—ã'])
                        self.inventory[item] = self.inventory.get(item, 0) + 1
                        print(f"–í—ã –Ω–∞—à–ª–∏: {item}!")
                    
                    time.sleep(2)
                    return True
            
            elif choice == '2':
                self.show_inventory()
                continue
            
            elif choice == '3':
                if random.random() < 0.5:
                    print("\n–í–∞–º —É–¥–∞–ª–æ—Å—å —Å–±–µ–∂–∞—Ç—å!")
                    time.sleep(1)
                    return False
                else:
                    print("\n–ù–µ —É–¥–∞–ª–æ—Å—å —Å–±–µ–∂–∞—Ç—å!")
            
            # –í—Ä–∞–≥ –∞—Ç–∞–∫—É–µ—Ç
            if enemy_hp > 0:
                enemy_damage = max(1, enemy_attack - random.randint(0, self.player_defense // 2))
                self.player_hp -= enemy_damage
                print(f"\n{enemy_name} –∞—Ç–∞–∫—É–µ—Ç –∏ –Ω–∞–Ω–æ—Å–∏—Ç {enemy_damage} —É—Ä–æ–Ω–∞!")
                print(f"–í–∞—à–µ –∑–¥–æ—Ä–æ–≤—å–µ: {self.player_hp}/{self.player_max_hp}")
                
                if self.player_hp <= 0:
                    print(f"\nüíÄ –í–ê–° –ü–û–ë–ï–î–ò–õ–ò! {enemy_name} –æ–∫–∞–∑–∞–ª—Å—è —Å–ª–∏—à–∫–æ–º —Å–∏–ª—ë–Ω...")
                    self.game_over = True
                    return False
            
            time.sleep(1)
    
    def explore_location(self):
        """–ò—Å—Å–ª–µ–¥–æ–≤–∞–Ω–∏–µ —Ç–µ–∫—É—â–µ–π –ª–æ–∫–∞—Ü–∏–∏"""
        location = self.locations[self.current_location]
        
        self.clear_screen()
        self.show_header()
        
        print(f"\nüìç –í–´ –ù–ê–•–û–î–ò–¢–ï–°–¨: {self.current_location.upper()}")
        print("\n" + location["–æ–ø–∏—Å–∞–Ω–∏–µ"])
        
        print("\n" + "‚îÄ" * 40)
        print("–î–æ—Å—Ç—É–ø–Ω—ã–µ –¥–µ–π—Å—Ç–≤–∏—è:")
        
        for i, action in enumerate(location["–¥–µ–π—Å—Ç–≤–∏—è"], 1):
            print(f"{i}. {action}")
        
        print("‚îÄ" * 40)
        
        while True:
            choice = input("\n–í–∞—à –≤—ã–±–æ—Ä: ").lower().strip()
            
            # –û–±—Ä–∞–±–æ—Ç–∫–∞ –¥–µ–π—Å—Ç–≤–∏–π
            if choice == '1' or location["–¥–µ–π—Å—Ç–≤–∏—è"][0] in choice:
                if self.current_location == "–≤—Ö–æ–¥ –≤ –ª–µ—Å":
                    self.current_location = "–∑–∞—Ä–æ—Å–ª–∏"
                    break
                elif self.current_location == "–∑–∞—Ä–æ—Å–ª–∏":
                    print("\n–í—ã –æ—Å—Ç–æ—Ä–æ–∂–Ω–æ –ø—Ä–æ–±–∏—Ä–∞–µ—Ç–µ—Å—å –∫ –∏—Å—Ç–æ—á–Ω–∏–∫—É –∑–≤—É–∫–∞...")
                    time.sleep(2)
                    
                    if "–≤—Ä–∞–≥" in location:
                        enemy = location["–≤—Ä–∞–≥"]
                        victory = self.combat(*enemy)
                        if victory:
                            print("\n–í—ã –ø–æ–±–µ–¥–∏–ª–∏ –≤—Ä–∞–≥–∞ –∏ –º–æ–∂–µ—Ç–µ –ø—Ä–æ–¥–æ–ª–∂–∏—Ç—å –ø—É—Ç—å!")
                        elif not self.game_over:
                            print("\n–í—ã –æ—Ç—Å—Ç—É–ø–∞–µ—Ç–µ –Ω–∞–∑–∞–¥.")
                            self.current_location = "–≤—Ö–æ–¥ –≤ –ª–µ—Å"
                    break
            
            elif choice == '2' or location["–¥–µ–π—Å—Ç–≤–∏—è"][1] in choice:
                if self.current_location == "–∑–∞—Ä–æ—Å–ª–∏":
                    self.current_location = "–≤—Ö–æ–¥ –≤ –ª–µ—Å"
                    break
                elif self.current_location == "—Å—Ç–∞—Ä–∞—è –¥–æ—Ä–æ–≥–∞":
                    self.current_location = "–≤—Ö–æ–¥ –≤ –ª–µ—Å"
                    break
                elif self.current_location == "—Ö–∏–∂–∏–Ω–∞":
                    self.current_location = "—Å—Ç–∞—Ä–∞—è –¥–æ—Ä–æ–≥–∞"
                    break
            
            elif choice == '3' or (len(location["–¥–µ–π—Å—Ç–≤–∏—è"]) > 2 and location["–¥–µ–π—Å—Ç–≤–∏—è"][2] in choice):
                if self.current_location == "—Å—Ç–∞—Ä–∞—è –¥–æ—Ä–æ–≥–∞":
                    self.current_location = "—Ö–∏–∂–∏–Ω–∞"
                    break
                elif self.current_location == "—Ö–∏–∂–∏–Ω–∞":
                    print("\n–í—ã –æ—Å—Ç–æ—Ä–æ–∂–Ω–æ –±–µ—Ä—ë—Ç–µ —Ñ–ª–∞–∫–æ–Ω...")
                    if "–ø—Ä–µ–¥–º–µ—Ç" in location:
                        item_name, item_type = location["–ø—Ä–µ–¥–º–µ—Ç"]
                        self.inventory[item_name] = self.inventory.get(item_name, 0) + 1
                        print(f"–í—ã –ø–æ–ª—É—á–∏–ª–∏: {item_name}!")
                        del location["–ø—Ä–µ–¥–º–µ—Ç"]
                    time.sleep(2)
                    break
            
            elif "–∏–Ω–≤–µ–Ω—Ç–∞—Ä—å" in choice:
                self.show_inventory()
                return
            
            elif "—Å—Ç–∞—Ç—É—Å" in choice:
                self.show_status()
                return
            
            elif "–≤—ã–π—Ç–∏" in choice or "–≤—ã—Ö–æ–¥" in choice:
                print("\n–í—ã –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω–æ —Ö–æ—Ç–∏—Ç–µ –≤—ã–π—Ç–∏? (–¥–∞/–Ω–µ—Ç)")
                if input("> ").lower().strip() == '–¥–∞':
                    self.game_over = True
                    return
            
            else:
                print("–ù–µ –ø–æ–Ω–∏–º–∞—é –≤–∞—à—É –∫–æ–º–∞–Ω–¥—É. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑.")
    
    def start_game(self):
        """–ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã"""
        self.show_header()
        
        # –í–≤–æ–¥ –∏–º–µ–Ω–∏
        self.slow_print("\n–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –¢—ë–º–Ω—ã–π –õ–µ—Å, —Å—Ç—Ä–∞–Ω–Ω–∏–∫...")
        time.sleep(1)
        self.slow_print("–î—Ä–µ–≤–Ω–∏–µ –¥—É—Ö–∏ —à–µ–ø—á—É—Ç, —á—Ç–æ –æ–ø–∞—Å–Ω–æ—Å—Ç—å –ø–æ–¥–∂–∏–¥–∞–µ—Ç –∑–∞ –∫–∞–∂–¥—ã–º –¥–µ—Ä–µ–≤–æ–º.")
        time.sleep(1)
        self.slow_print("–ù–æ –∏ –Ω–∞–≥—Ä–∞–¥—ã –º–æ–≥—É—Ç –±—ã—Ç—å –≤–µ–ª–∏–∫–∏ –¥–ª—è —Ö—Ä–∞–±—Ä—ã—Ö –¥—É—à–æ–π...")
        time.sleep(1)
        
        self.player_name = input("\n–ö–∞–∫ –≤–∞—Å –∑–æ–≤—É—Ç, —Å—Ç—Ä–∞–Ω–Ω–∏–∫? > ").strip()
        if not self.player_name:
            self.player_name = "–°—Ç—Ä–∞–Ω–Ω–∏–∫"
        
        self.slow_print(f"\n–£–¥–∞—á–∏ —Ç–µ–±–µ, {self.player_name}. –ü—É—Å—Ç—å —É–¥–∞—á–∞ –±—É–¥–µ—Ç –Ω–∞ —Ç–≤–æ–µ–π —Å—Ç–æ—Ä–æ–Ω–µ...")
        time.sleep(2)
        
        # –ì–ª–∞–≤–Ω—ã–π –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª
        while not self.game_over:
            self.explore_location()
        
        # –ö–æ–Ω–µ—Ü –∏–≥—Ä—ã
        self.clear_screen()
        if self.player_hp <= 0:
            print("""
            ‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó
            ‚ïë            –ì –ê –ú –ï   –û –í –ï –†             ‚ïë
            ‚ïë         –í–∞—à–µ –ø—Ä–∏–∫–ª—é—á–µ–Ω–∏–µ –æ–∫–æ–Ω—á–µ–Ω–æ        ‚ïë
            ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù
            """)
        else:
            print("""
            ‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó
            ‚ïë        –ò –ì –† –ê   –ó –ê –í –ï –† –® –ï –ù –ê       ‚ïë
            ‚ïë    –°–ø–∞—Å–∏–±–æ –∑–∞ –∏–≥—Ä—É! –î–æ –Ω–æ–≤—ã—Ö –≤—Å—Ç—Ä–µ—á!     ‚ïë
            ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù
            """)
        
        print(f"\n–ò—Ç–æ–≥–æ–≤—ã–µ –ø–æ–∫–∞–∑–∞—Ç–µ–ª–∏:")
        print(f"–ò–º—è: {self.player_name}")
        print(f"–£—Ä–æ–≤–µ–Ω—å: {self.player_level}")
        print(f"–ó–æ–ª–æ—Ç–æ: {self.player_gold}")
        print(f"–û–ø—ã—Ç: {self.player_xp}")
        
        input("\n–ù–∞–∂–º–∏—Ç–µ Enter –¥–ª—è –≤—ã—Ö–æ–¥–∞...")


# –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã
if __name__ == "__main__":
    game = TextAdventureGame()
    game.start_game()
