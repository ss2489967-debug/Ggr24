# –ü—É—Ç–∏—à–µ—Å—Ç–≤–∏–µ –≤ –ø–µ—â–µ—Ä–µ –∫—Ä–∞—Ç–∫–æ–µ 
print("=== –ú–ò–ù–ò –ò–ì–†–ê ===")
print("–í—ã –≤ –ø–µ—â–µ—Ä–µ. –í–∏–¥–∏—Ç–µ –¥–≤–∞ –ø—Ä–æ—Ö–æ–¥–∞.")

choice = input("–ö—É–¥–∞ –ø–æ–π–¥–µ—Ç–µ? (–ª–µ–≤—ã–π/–ø—Ä–∞–≤—ã–π): ")

if choice == "–ª–µ–≤—ã–π":
    print("–í—ã –Ω–∞—à–ª–∏ —Å—É–Ω–¥—É–∫ —Å –∑–æ–ª–æ—Ç–æ–º! üéâ")
elif choice == "–ø—Ä–∞–≤—ã–π":
    print("–í—ã –≤—Å—Ç—Ä–µ—Ç–∏–ª–∏ –¥—Ä–∞–∫–æ–Ω–∞... –ò–≥—Ä–∞ –æ–∫–æ–Ω—á–µ–Ω–∞. üò¢")
else:
    print("–í—ã –∑–∞–±–ª—É–¥–∏–ª–∏—Å—å –≤ —Ç–µ–º–Ω–æ—Ç–µ.")
